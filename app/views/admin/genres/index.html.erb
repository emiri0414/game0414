<div class="container">
	<div class="row">
		<h2>ジャンル新規登録・一覧</h2>
			<%= form_for(@genre, url: admin_genres_path, method: :post) do |f| %>
				<%= f.label :name, 'ジャンル名'%>
				<%= f.text_field :name, class:'form_control' %>
				<%= f.select :is_active, Genre.is_actives.keys, class:"form-control" %>
				<%= f.submit '追加' %>
			<% end %>
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th>有効ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_active %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>