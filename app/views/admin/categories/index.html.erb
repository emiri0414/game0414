<div class="container">
	<div class="row">
		<h2>ゲームカテゴリー新規登録・一覧</h2>
			<%= form_for(@category, url: admin_categories_path, method: :post) do |f| %>
				<%= f.label :name, 'カテゴリー名'%>
				<%= f.text_field :name, class:'form_control' %>
				<%= f.submit '追加' %>
			<% end %>
		<table class="table">
			<thead>
				<tr>
					<th>カテゴリー名</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td><%= category.name %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>